temperature = float(input("Enter temperature value: "))
unit = input("Convert from (C/F): ").upper() #input for unit and convert to uppercase for consistency

# Convert Celsius to Fahrenheit
if unit == "C":
    fahrenheit = (temperature * 9/5) + 32 # Calculate Fahrenheit using the formula (C * 9/5) + 32
    print(f"Converted Temperature: {fahrenheit:.2f}°F")

# Convert Fahrenheit to Celsius
elif unit == "F":
    celsius = (temperature - 32) * 5/9 # Calculate Celsius using the formula (F - 32) * 5/9
    print(f"Converted Temperature: {celsius:.2f}°C")

else:
    # Handles invalid unit input
    print("Invalid unit... Please enter C or F")